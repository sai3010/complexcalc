            <Button x:Name="rand_Copy" Content="rnd" Background="Transparent" Visibility="Visible" FontSize="25" Height="48" Width="80" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,585,290,0" Click="rand_Click" >
