            <Button x:Name="button3" Height="48"  Content="^"  Visibility="Visible" FontSize="25" Background="Transparent" HorizontalAlignment="Center" Margin="0,585,180,0" VerticalAlignment="Top" Width="80" Click="sqrt_Click" >
